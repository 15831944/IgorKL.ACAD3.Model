<UserControl x:Class="IgorKL.ACAD3.Model.CivilSurfaces.Views.SurfaceSelectorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IgorKL.ACAD3.Model.CivilSurfaces.Views"
             mc:Ignorable="d" Width="563.292" Height="121.519">
    <Grid>
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFEDFFFA"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ComboBox x:Name="comboBox_surfaces" HorizontalAlignment="Left" Margin="132,32,0,0" VerticalAlignment="Top" Width="340">
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
        </ComboBox>
        <Label x:Name="label" Content="Поверхность:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,30,0,0"/>

    </Grid>
</UserControl>
